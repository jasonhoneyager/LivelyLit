@using ProjectManager.Models
@{
    ViewBag.Title = "Home Page";
}

<div class="container banner">
    <div class="col-md-4">
        <img src="~/Images/Photos/Lively-Lit-Logo.jpg" alt="Lively Literature Logo" />
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-7">
        @using Microsoft.AspNet.Identity
        @if (Request.IsAuthenticated)
        {
            using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right"}))
            {
                @Html.AntiForgeryToken()
                var user = new ApplicationDbContext().Users.Find(User.Identity.GetUserId());
                @Html.ActionLink("Welcome Back, " + user.CompanyName + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                <a class="btn btn-default" href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
            }
        }
        @*else
        {
            @Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
        }*@
    </div>
</div>
<div class="container page-info">
    <div class="row left right">
        <div class="col-md-7 no-buffer">
            <img src="~/Images/Photos/library.jpg" style ="width:100%;"/>
        </div>
        <div class="col-md-5 no-buffer">
            <a href="@Url.Action("Create", "Project")"><img src="~/Images/Photos/newproject.jpg" style="height:91px; width:465px;" /></a>
            <a href="@Url.Action("Index", "Project")"><img src="~/Images/Photos/projectmanager.jpg" style="height:91px; width:465px;" /></a>
            <a href="@Url.Action("Register", "Account")"><img src="~/Images/Photos/register.jpg" style="height:91px; width:465px;" /></a>
            <a href="@Url.Action("Login", "Account")"><img src="~/Images/Photos/login.jpg" style="height:91px; width:465px;" /></a>
        </div>
    </div>
</div>
<div class="container page-info">
    <div class="row">
        <div class="col-md-4 border-right">
            <center>
                <h2>About Michelle</h2>
                <p>
                    I’ve been obsessed with stories and great writing for as long as I can remember.
                    I even have a BA in English professional writing from Mount Mary University here in Southeastern Wisconsin.
                    Starting Lively Literature Editorial and Writing Services was just a natural extension of my personality.
                </p>
            </center>
        </div>
        
        <div class="col-md-4 borders">
            <center>
                <h2>Publications</h2>
                <p>
                    View my online portfolio, as well as some of my currently running articles.
                </p>
                <a href="https://www.clippings.me/michellelovrine"><img src="~/Images/Photos/portfolio.png" height="128"/></a>
            </center>
        </div>
        
        
        <div class="col-md-4 border-left">
            <center>
                <h2>Buy My Book</h2>
                <p>I am also a self published fantasy author.  Find out more about my book, and how to purchase it here.</p>
                <a href="https://www.amazon.com/Eatheria-Michelle-Lovrine-ebook/dp/B00IRRNCT4"><img src="~/Images/Photos/secret-book-icon1.png" /></a>
            </center>
        </div>
    </div>
</div>